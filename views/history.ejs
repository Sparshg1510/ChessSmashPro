<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Match History - <%= user.username %></title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-black p-6">

  <!-- Glass Card -->
  <div class="w-full max-w-3xl bg-white/10 backdrop-blur-xl rounded-2xl shadow-2xl border border-white/20 p-8 text-white relative">

    <!-- Title -->
    <h1 class="text-3xl font-bold text-center mb-6">
      <%= user.username %>’s Match History
    </h1>

    <!-- Table -->
    <div class="overflow-x-auto">
      <table class="w-full text-sm border-collapse">
        <thead>
          <tr class="bg-white/20">
            <th class="p-3 text-left">Date</th>
            <th class="p-3 text-left">Opponent</th>
            <th class="p-3 text-left">Color</th>
            <th class="p-3 text-left">Result</th>
          </tr>
        </thead>
        <tbody>
          <% if (matches.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center p-4 text-white/70">
                No matches played yet.
              </td>
            </tr>
          <% } else { %>
            <% matches.forEach(match => { %>
              <tr class="hover:bg-white/10 transition">
                <td class="p-3"><%= match.date %></td>
                <td class="p-3"><%= match.opponent %></td>
                <td class="p-3"><%= match.color %></td>
                <td class="p-3 font-semibold 
                  <%= match.result === 'Win' ? 'text-green-400' : match.result === 'Draw' ? 'text-yellow-400' : 'text-red-400' %>">
                  <%= match.result %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>

    <!-- Back button -->
    <div class="mt-6 text-center">
      <a href="/" 
         class="px-4 py-2 bg-white/20 hover:bg-white/30 border border-white/30 rounded-lg shadow-md transition">
        ⬅ Back to Game
      </a>
    </div>
  </div>

</body>
</html>
